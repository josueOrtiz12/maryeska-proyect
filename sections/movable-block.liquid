{% schema %}
{
  "name": "Moving Banner",
  "settings": [
    {
      "type": "text",
      "id": "banner_text",
      "label": "Banner Text",
      "default": "Â¡Este es un banner en movimiento!"
    },
    {
      "type": "image_picker",
      "id": "banner_icon",
      "label": "Banner Icon"
    },
    {
      "type": "range",
      "id": "speed",
      "label": "Animation Speed",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 5,
      "unit": "s"
    }
  ],
  "presets": [
    {
      "name": "Moving Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .moving-banner {
    white-space: nowrap;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
    background-color: #f0f0f0;
    padding: 10px 0;
  }
  .moving-banner-content {
    display: inline-block;
    padding-left: 100%;
    animation: moveBanner {{ section.settings.speed }}s linear infinite;
  }
  .moving-banner-content img {
    vertical-align: middle;
    margin-right: 10px;
  }
  @keyframes moveBanner {
    0% {
      transform: translateX(100%);
    }
    100% {
      transform: translateX(-100%);
    }
  }
</style>

<div class="moving-banner">
  <div class="moving-banner-content">
    {% if section.settings.banner_icon %}
      <img src="{{ section.settings.banner_icon | img_url: '50x50' }}" alt="Icon">
    {% endif %}
    <span>{{ section.settings.banner_text }}</span>
  </div>
</div>